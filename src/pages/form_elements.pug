include ../assets/pug/blocks.pug

<!DOCTYPE html>
html(lang="zxx")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Form Elements
  body
    .container
      .inputs-wrap
        .main-inputs
          +input('', 'Text Field', 'default', 'Email')
          +input('', 'Text Field', 'Hover / Focus', 'Text')
          +input_type_dropdown('', 'dropdown', 'Сколько гостей')
          +input('', 'masked text field', 'default', 'ДД.ММ.ГГГГ')
        .mini-inputs
          +input_type_dropdown('base-input_size_mini', 'date dropdown', 'ДД.ММ.ГГГГ')
          +input_type_dropdown('base-input_size_mini', 'date dropdown', '19.08.2019')
        +input_type_dropdown('base-input_size_medium', 'filter date dropdown', '19 авг - 23 авг', 'ДД.ММ.ГГГГ')
        +input_type_subscription('base-input_size_medium', 'subscription text field', 'Email')
      .switches-wrap
        .checkbox-buttons
          h6.title Checkbox Buttons
          +checkbox('Можно курить', 'one')
          +checkbox('Можно с питомцами', 'two')
          +checkbox('Можно пригласить гостей (до 10 человек)', 'three')
      .buttons-wrap