include ../assets/pug/blocks.pug

<!DOCTYPE html>
html(lang="zxx")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Form Elements
  body.form_elements
    .container
      .row.row-one
        .column320.column-one
          .inputs
            +input({placeholder: 'Email'})
            +input({rightLabel:'Hover / Focus', placeholder: 'This is pretty awesome'})
            +dropdown({leftLabel: 'Dropdown', items: ['взрослые','дети', 'младенцы'], placeholder: 'Сколько гостей', classes: 'dropdown_size_big dropdown_content_guests'})
            +input({leftLabel: 'masked text field', rightLabel: '', placeholder: 'ДД.ММ.ГГГГ'})
          +datepicker({leftLabel: 'date Dropdown', rightLabel:'date Dropdown', type: 'double', value: '19.08.2019'})
          +datepicker({label: 'FILTER DATE DROPDOWN', value: '19 авг - 23 авг'})
          +input_type_subscription('subscription text field', 'Email', 'input_size_medium')
        .column320.column-two
          +checkbox-list('Checkbox Buttons', ['Можно курить','Можно с питомцами','Можно пригласить гостей (до 10 человек)'])
          .radio-buttons
            h6.title Radio Buttons
            +radio('Мужчина', 'gender')
            +radio('Женщина', 'gender')
          .toggle-buttons
            h6.title Toggle
            +toggle('Получать спецпредложения')
            +toggle('Получать спецпредложения')
          .like-buttons
            h6.title Like button
            +like('2')
            +like('12')
          .rate-buttons
            h6.title Rate button
            .rate-buttons-wrap
              +rate
              +rate
        .column320.column-three
          +range('Range Slider')
          .buttons
            h6.title Buttons
            .buttons-wrap
              .buttons-row
                +button({text: 'Click me'})
                +button({text: 'Click me'})
              .buttons-row
                +button({text: 'Click me', classes: 'button_type_transparent'})
                +button({text: 'Click me', classes: 'button_type_transparent'})
              .buttons-row
                +button({text: 'Click me', classes: 'button_type_light'})
                +button({text: 'Click me', classes: 'button_type_light'})
            +button({text: 'Перейти к оплате', classes: 'button_size_big', arrow: true})
          .pagination-block
            h6.title Pagination
            +pagination
      .row.row-two
        .column320.column-one
          +dropdown({leftLabel: 'Dropdown', rightLabel: 'Default', items: ['спальни','кровати', 'ванные комнаты'], placeholder: 'Выберите удобства', classes: 'dropdown_size_medium dropdown_content_amenities'})
          +dropdown({leftLabel: 'Dropdown', rightLabel: 'expanded', items: ['спальни','кровати', 'ванные комнаты'], placeholder: 'Выберите удобства', classes: 'dropdown_size_medium dropdown_content_amenities', show: true})
          +expandable-checkbox('expandable checkbox list', ['Завтрак', 'Письменный стол', 'Стул для кормления', 'Кроватка', 'Телевизор', 'Шампунь'])
          +expandable-checkbox('expandable checkbox list', ['Завтрак', 'Письменный стол', 'Стул для кормления', 'Кроватка', 'Телевизор', 'Шампунь'])
        .column320.column-two
          +dropdown({leftLabel: 'Dropdown', items: ['взрослые','дети', 'младенцы'], placeholder: 'Сколько гостей', buttons: true, classes: 'dropdown_size_big dropdown_content_guests', show: true})
          +checkbox-list_type_rich('rich Checkbox Buttons', {'Широкий коридор':'Ширина коридоров в номере не менее 91 см.',
        'Помощник для инвалидов':'На 1 этаже вас встретит специалист  и проводит до номера.'})
        .column320.column-three
          +dropdown({leftLabel: 'Dropdown', items: ['взрослые','дети', 'младенцы'], placeholder: 'Сколько гостей', buttons: true, classes: 'dropdown_size_big dropdown_content_guests', show: true})
          +bullet-list('bullet list', ['Нельзя с питомцами', 'Без вечеринок и мероприятий', 'Время прибытия — после 13:00, а выезд до 12:00'])
      .row.row-three
        .advantage-list
          +advantage('Комфорт', 'Шумопоглощающие стены', '../assets/img/smiley.svg', 'smiley')
          +advantage('Удобство', 'Окно в каждой из спален', '../assets/img/city.svg', 'city')
        +comment('Мурад Сарафанов','Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей.','5 дней назад', 12, 'assets/img/feedback_1.jpg')
