mixin footer()
  .footer
    .container.footer__body
      .footer__info
        +logo('footer__logo')
        p.footer__text Бронирование номеров в лучшем отеле 2019 года по версии ассоциации «Отельные взгляды»
      .footer__list.footer__nav
        h6.footer__title Навигация
        ul
          li.footer__list-item
            a.footer__list-link(href="") О нас
          li.footer__list-item
            a.footer__list-link(href="") Новости
          li.footer__list-item
            a.footer__list-link(href="") Служба поддержки
          li.footer__list-item
            a.footer__list-link(href="") Услуги
      .footer__list.footer__about
        h6.footer__title О нас
        ul.footer__list-list 
          li.footer__list-item
            a.footer__list-link(href="") О сервисе
          li.footer__list-item
            a.footer__list-link(href="") Наша команда
          li.footer__list-item
            a.footer__list-link(href="") Вакансии
          li.footer__list-item
            a.footer__list-link(href="") Инвесторы
      .footer__list.footer__support
        h6.footer__title Служба поддержки
        ul.footer__list-list 
          li.footer__list-item
            a.footer__list-link(href="") Соглашения
          li.footer__list-item
            a.footer__list-link(href="") Сообщества
          li.footer__list-item
            a.footer__list-link(href="") Связь с нами
      .footer__subscribe
        h6.footer__title Подписка
        p.footer__text Получайте специальные предложения и новости сервиса
        +input_type_subscription('', 'Email')