mixin dropdown(leftLabel, rightLabel, arr, placeholder, classes)
  .dropdown(class=classes)
    .dropdown__label
      p.dropdown__label-left=leftLabel
      p.dropdown__label-right=rightLabel
    .dropdown__btn
      span.dropdown__btn-value=placeholder
    .dropdown__menu
      each item in arr
        .dropdown__item
          .dropdown__item-text=item
          .dropdown__item-count
            .dropdown__item-btn-reduce.dropdown__item-btn -
            .dropdown__item-num 0
            .dropdown__item-btn-add.dropdown__item-btn +
      .dropdown__menu-btn
        p.dropdown__menu-btn-clear Очистить
        p.dropdown__menu-btn-apply Применить
        